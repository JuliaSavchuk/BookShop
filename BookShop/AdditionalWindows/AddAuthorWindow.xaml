<Window x:Class="BookShop.AdditionalWindows.AddAuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookShop.AdditionalWindows"
        mc:Ignorable="d"
        Title="AddAuthorWindow" Height="150" Width="300" Background="#e5c583">

    <StackPanel Margin="10">
        <Label Content="Ім'я автора:" Width="250"
               Foreground="#2a1d15"
               FontSize="14"/>
        
        <TextBox Name="AuthorNameTextBox"
                 Width="250"
                 Foreground="#2a1d15"
                 Background="#e5c583"
                 BorderBrush="#65492d"
                 BorderThickness="5"
                 FontSize="14"
                 Margin="4"/>

        <Button Content="Зберегти" Click="SaveAuthor_Click"
                Width="250"
                Foreground="#2a1d15"
                Background="#b28948"
                BorderBrush="#65492d"
                BorderThickness="5"
                FontSize="14"/>
    </StackPanel>
</Window>
